<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Glyph Matrix permission -->
    <uses-permission android:name="com.nothing.ketchum.permission.ENABLE" />

    <!-- Required for Tasker plugin -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GlyphMatrixTasker"
        tools:targetApi="34">

        <!-- Nothing API Key (required for Glyph SDK) -->
        <meta-data
            android:name="NothingKey"
            android:value="test" />

        <!-- Main launcher activity (Glyph Designer UI) -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.GlyphMatrixTasker">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Tasker Action: Clear Glyph Matrix -->
        <activity
            android:name=".actions.ClearGlyphConfigActivity"
            android:exported="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/action_clear_glyph"
            android:theme="@style/Theme.GlyphMatrixTasker">
            <intent-filter>
                <action android:name="com.twofortyfouram.locale.intent.action.EDIT_SETTING" />
            </intent-filter>
        </activity>

        <!-- Tasker Action: Update Glyph Matrix -->
        <activity
            android:name=".actions.UpdateGlyphConfigActivity"
            android:exported="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/action_update_glyph"
            android:theme="@style/Theme.GlyphMatrixTasker">
            <intent-filter>
                <action android:name="com.twofortyfouram.locale.intent.action.EDIT_SETTING" />
            </intent-filter>
        </activity>

    </application>

</manifest>
